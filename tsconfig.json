{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "jsx": "react",
    "baseUrl": "./packages",
    "paths": {
      "@/*": ["package/*/src"]
    }
  },
  "include": [
    "packages/*/src",
    "packages/global.d.ts"
  ],
  "exclude": [
    "**/__test__"
  ]
}
